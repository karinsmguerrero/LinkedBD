                  <TextField fx:id="txtPK" />
                  <ChoiceBox fx:id="txtRequired" />
                  <TextField fx:id="txtDefault" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" text="Agregar" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" text="Eliminar" />
               </children>
            </HBox>
         </children>
